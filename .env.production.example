# Production Environment Variables Template
# Copy this to .env.production and fill in your values
# DO NOT commit .env.production to Git!

# ================================
# DATABASE
# ================================
DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/neondb?sslmode=require

# ================================
# AUTHENTICATION
# ================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secret-key-here-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=7

# ================================
# LLM PROVIDERS
# ================================
LLM_PROVIDER=claude  # Options: claude, openai

# Anthropic Claude API
CLAUDE_API_KEY=sk-ant-api03-xxx

# OpenAI API (fallback)
OPENAI_API_KEY=sk-xxx

# ================================
# VECTOR DATABASE (RAG)
# ================================
QDRANT_URL=https://xxx.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# ================================
# APPLICATION SETTINGS
# ================================
NODE_ENV=production
PORT=8000
WORKERS=4

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-frontend.vercel.app,https://your-custom-domain.com

# ================================
# FRONTEND CONFIGURATION
# ================================
REACT_APP_API_URL=https://your-backend.railway.app

# ================================
# MONITORING & LOGGING
# ================================
LOG_LEVEL=info  # Options: debug, info, warning, error
SENTRY_DSN=  # Optional: Sentry error tracking

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TRANSLATE=20  # per hour per user
RATE_LIMIT_PERSONALIZE=30  # per hour per user
RATE_LIMIT_CHAT=50  # per day per user

# ================================
# CACHE CONFIGURATION
# ================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=2592000  # 30 days

# ================================
# FEATURE FLAGS
# ================================
FEATURE_TRANSLATION=true
FEATURE_PERSONALIZATION=true
FEATURE_RAG_CHAT=true
FEATURE_AGENTS=true

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# Analytics (optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Email (optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourproject.com
