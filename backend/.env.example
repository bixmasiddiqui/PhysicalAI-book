# Physical AI Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# ====================
# DATABASE
# ====================

# For local development (no external DB needed):
DATABASE_URL=sqlite:///./physical_ai.db

# For production (Neon PostgreSQL):
# DATABASE_URL=postgresql://user:pass@ep-xyz.region.aws.neon.tech/dbname?sslmode=require

# ====================
# AUTHENTICATION
# ====================

# JWT secret key (change this in production!)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7

# ====================
# LLM API KEYS
# ====================

# Claude API (Anthropic)
CLAUDE_API_KEY=

# OpenAI API
OPENAI_API_KEY=

# Google Gemini API
GEMINI_API_KEY=

# ====================
# VECTOR DATABASE (For RAG Chatbot)
# ====================

# Qdrant Cloud
QDRANT_URL=
QDRANT_API_KEY=

# ====================
# FEATURE FLAGS
# ====================

DEMO_MODE=false
FEATURE_TRANSLATION=true
FEATURE_PERSONALIZATION=true
FEATURE_RAG_CHAT=true

# ====================
# CORS SETTINGS
# ====================

# Allowed origins (comma-separated)
# For local dev: http://localhost:3000
# For production: your-frontend-domain.vercel.app
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================
# SERVER SETTINGS
# ====================

PORT=8000
LOG_LEVEL=INFO
DEBUG=true
